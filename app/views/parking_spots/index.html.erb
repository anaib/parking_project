<div class="page-header">
  <h1>
    Parking spots
    <a href="/parking_spots/new" class="btn btn-lg btn-success">New Parking spot</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Address</th>
        <th>City</th>
        <th>Zipcode</th>
        <th>Time</th>
        <th>Car type</th>
        <th>Offer user</th>
        <th>Type of parking</th>
        <th>Max time</th>
        <th>Price</th>
        <th>Description</th>
        <th>Accept user</th>
        <th>Neighborhood</th>
        <th>Actions</th>
      </tr>

      <% @parking_spots.each do |parking_spot| %>
      <tr>
        <td><%= parking_spot.address %></td>
        <td><%= parking_spot.city %></td>
        <td><%= parking_spot.zipcode %></td>
        <td><%= parking_spot.time %></td>
        <td><%= parking_spot.car_type %></td>
        <td><%= parking_spot.offer_user.email %></td>
        <td><%= parking_spot.type_of_parking %></td>
        <td><%= parking_spot.max_time %></td>
        <td><%= parking_spot.price %></td>
        <td><%= parking_spot.description %></td>
        <td><%= parking_spot.accept_user_id %></td>
        <td><%= parking_spot.neighborhood %></td>
        <td>
          <a href="/parking_spots/<%= parking_spot.id %>" class="btn btn-primary">Show</a>
          
          <% if current_user == parking_spot.offer_user %>
            <a href="/parking_spots/<%= parking_spot.id %>/edit" class="btn btn-warning">Edit</a>
            <a href="/delete_parking_spot/<%= parking_spot.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
          <% end %>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @parking_spots, theme: 'twitter-bootstrap-4' %>
  </div>
</div>

<script src="//maps.google.com/maps/api/js?v=3.24&key=AIzaSyCOTPWiuvyyo6sKoIBzKA4-1ol-vTOIOlM"></script>
<script src="//cdn.rawgit.com/mahnunchik/markerclustererplus/master/dist/markerclusterer.min.js"></script>
<script>
  handler = Gmaps.build('Google');
  handler.buildMap({ provider: {}, internal: {id: 'location_map'}}, function(){
    markers = handler.addMarkers(<%= raw @location_hash.to_json %>);
    handler.bounds.extendWith(markers);
    handler.fitMapToBounds();
  });
</script>