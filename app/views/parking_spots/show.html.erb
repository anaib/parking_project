<div class="page-header">
  <h3>Parking Spot #<%= @parking_spot.id %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>Address</dt>
      <dd>
        <div>
          <div id="location_map" style="height: 480px;"></div>
        </div>
      </dd>

      <dt>City</dt>
      <dd><%= @parking_spot.city %></dd>

      <dt>Zipcode</dt>
      <dd><%= @parking_spot.zipcode %></dd>

      <dt>Time</dt>
      <dd><%= @parking_spot.time %></dd>

      <dt>Car type</dt>
      <dd><%= @parking_spot.car_type %></dd>

      <dt>Offer user</dt>
      <dd>
        <% if @parking_spot.offer_user.present? %>
          <a href="/users/<%= @parking_spot.offer_user_id %>">
            <%= @parking_spot.offer_user.created_at %>
          </a>
        <% end %>
      </dd>

      <dt>Type of parking</dt>
      <dd><%= @parking_spot.type_of_parking %></dd>

      <dt>Max time</dt>
      <dd><%= @parking_spot.max_time %></dd>

      <dt>Price</dt>
      <dd><%= @parking_spot.price %></dd>

      <dt>Description</dt>
      <dd><%= @parking_spot.description %></dd>

      <dt>Accept user</dt>
      <dd><%= @parking_spot.accept_user_id %></dd>

      <dt>Neighborhood</dt>
      <dd><%= @parking_spot.neighborhood %></dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/parking_spots" class="btn btn-primary">
        Back
      </a>
      <a href="/parking_spots/<%= @parking_spot.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_parking_spot/<%= @parking_spot.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>
    </div>
  </div>
</div>


<script src="//maps.google.com/maps/api/js?v=3.24&key=AIzaSyCOTPWiuvyyo6sKoIBzKA4-1ol-vTOIOlM"></script>
<script src="//cdn.rawgit.com/mahnunchik/markerclustererplus/master/dist/markerclusterer.min.js"></script>
<script>
  handler = Gmaps.build('Google');
  handler.buildMap({ provider: {}, internal: {id: 'location_map'}}, function(){
    markers = handler.addMarkers([
      {
        "lat": <%= @parking_spot.address_latitude %>,
        "lng": <%= @parking_spot.address_longitude %>,
        "infowindow": "<h5><%= @parking_spot.created_at %></h5><small><%= @parking_spot.address_formatted_address %></small>"
      }
    ]);
    handler.bounds.extendWith(markers);
    handler.fitMapToBounds();
  });
</script>