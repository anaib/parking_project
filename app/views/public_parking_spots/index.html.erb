<div class="page-header">
  <h1>
    Parking spots
    <a href="/public_parking_spots/new" class="btn btn-lg btn-success">New parking spot</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Address</th>
        <th>City</th>
        <th>Zipcode</th>
        <th>Date</th>
        <th>Starting time</th>
        <th>Max time</th>
        <th>Car type</th>
        <th>Price</th>
        <th>Points</th>
        <th>User</th>
        <th>Reserve</th>
        <th>Actions</th>
      </tr>

      <% @public_parking_spots.each do |public_parking_spot| %>
      <tr>
        <td><%= public_parking_spot.address %></td>
        <td><%= public_parking_spot.city %></td>
        <td><%= public_parking_spot.zipcode %></td>
        <td><%= public_parking_spot.date %></td>
        <td><%= public_parking_spot.starting_time %></td>
        <td><%= public_parking_spot.max_time %></td>
        <td><%= public_parking_spot.car_type %></td>
        <td><%= public_parking_spot.street_parking_price %></td>
        <td><%= public_parking_spot.points %></td>
        <td>
          <% if public_parking_spot.offer_user.present? %>
            <a href="/users/<%= public_parking_spot.offer_user.id %>">
              <%= public_parking_spot.offer_user.username %>
            </a>
          <% end %>
        </td>
        <td>
            <a href="/reserve_public_parking_spots/<%= public_parking_spot.id %>" class="btn btn-warning">Reserve</a>
        </td>
        <td>
          <a href="/public_parking_spots/<%= public_parking_spot.id %>" class="btn btn-primary">Show</a>

          <% if current_user == public_parking_spot.offer_user %>
            <a href="/public_parking_spots/<%= public_parking_spot.id %>/edit" class="btn btn-warning">Edit</a>
            <a href="/delete_public_parking_spot/<%= public_parking_spot.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
          <% end %>

        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @public_parking_spots, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
