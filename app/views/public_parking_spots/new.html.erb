<!-- Validation failure messages -->
<% if @public_parking_spot.errors.any? %>
  <% @public_parking_spot.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Add Public Parking Spot</h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/create_public_parking_spot" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for address -->
      <div class="form-group">
        <label for="address" class="control-label">
          Address or closest address
        </label>

        <input type="text" id="address" name="address" placeholder="Address" class="form-control" value="<%= @public_parking_spot.address %>">
      </div>

      <!-- Label and input for city -->
      <div class="form-group">
        <label for="city" class="control-label">
          City
        </label>

        <input type="text" id="city" name="city" placeholder="City" class="form-control" value="<%= @public_parking_spot.city %>">
      </div>

      <!-- Label and input for zipcode -->
      <div class="form-group">
        <label for="zipcode" class="control-label">
          Zipcode
        </label>

        <input type="text" id="zipcode" name="zipcode" placeholder="Zipcode in XXXXX format" class="form-control" value="<%= @public_parking_spot.zipcode %>">
      </div>

      <!-- Label and input for date -->
      <div class="form-group">
        <label for="date" class="control-label">
          Date
        </label>

        <input type="text" id="date" name="date" placeholder="Date in MM/DD/YYYY" class="form-control" value="<%= @public_parking_spot.date %>">
      </div>

      <!-- Label and input for starting_time -->
      <div class="form-group">
        <label for="starting_time" class="control-label">
          Starting time
        </label>

        <input type="text" id="starting_time" name="starting_time" placeholder="Starting time in 24 hour format - XX:XX" class="form-control" value="<%= @public_parking_spot.starting_time %>">
      </div>

      <!-- Label and input for max_time -->
      <div class="form-group">
        <label for="max_time" class="control-label">
          Max time
        </label>

        <input type="text" id="max_time" name="max_time" placeholder="Max time  in hours or mins" class="form-control" value="<%= @public_parking_spot.max_time %>">
      </div>

      <!-- Label and input for car_type -->
      <div class="form-group">
        <label for="car_type" class="control-label">
          Car type
        </label>

        <input type="text" id="car_type" name="car_type" placeholder="Space enough for a compact or sedan or SUV" class="form-control" value="<%= @public_parking_spot.car_type %>">
      </div>

      <!-- Label and input for street_parking_price -->
      <div class="form-group">
        <label for="street_parking_price" class="control-label">
         Price
        </label>

        <input type="text" id="street_parking_price" name="street_parking_price" placeholder="Street parking price in $ per hour" class="form-control" value="<%= @public_parking_spot.street_parking_price %>">
      </div>

      <!-- Label and input for description -->
      <div class="form-group">
        <label for="description" class="control-label">
          Description
        </label>

        <textarea id="description" name="description" placeholder="Location of the spot from the address or on the right/left side of the street" class="form-control" rows="3"><%= @public_parking_spot.description %></textarea>
      </div>

      <!-- Label and input for pub_offer_user_id
      <div class="form-group">
        <label for="pub_offer_user_id" class="control-label">
          Pub offer user
        </label>

        <input type="text" id="pub_offer_user_id" name="pub_offer_user_id" placeholder="Pub offer user" class="form-control" value="<%= @public_parking_spot.pub_offer_user_id %>">
      </div>
-->

      <!-- Label and input for points -->
      <div class="form-group">
        <label for="points" class="control-label">
          Points
        </label>

        <input type="text" id="points" name="points" placeholder="Points to claim the spot" class="form-control" value="<%= @public_parking_spot.points %>">
      </div>

      <!-- Label and input for offer_user_id -->
      <input type="hidden" name="offer_user_id" value="<%= current_user.id %>">
      <!-- Label and input for accept_user_id
      <div class="form-group">
        <label for="accept_user_id" class="control-label">
          Accept user
        </label>

        <%= select_tag(:accept_user_id, options_from_collection_for_select(User.all, :id, :created_at, @public_parking_spot.accept_user_id), :class => "form-control") %>
      </div>
-->

      <button class="btn btn-success">
        Create Public Parking Spot
      </button>
      or
      <a href="/public_parking_spots">Cancel</a>
    </form>
  </div>
</div>
