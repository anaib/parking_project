<div class="page-header">
  <h1>
    Spots avaiables
    <a href="/spots_avaiables/new" class="btn btn-lg btn-success">New Spots avaiable</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Streets</th>
        <th>Time</th>
        <th>Thanks</th>
        <th>Zipcode</th>
        <th>Actions</th>
      </tr>

      <% @spots_avaiables.each do |spots_avaiable| %>
      <tr>
        <td><%= spots_avaiable.streets %></td>
        <td><%= spots_avaiable.time %></td>
        <td><%= spots_avaiable.thanks %></td>
        <td>
          <% if spots_avaiable.neighborhood.present? %>
            <a href="/information/<%= spots_avaiable.neighborhood.id %>">
              <%= spots_avaiable.neighborhood.city %>
            </a>
          <% end %>
        </td>
        <td>
          <a href="/spots_avaiables/<%= spots_avaiable.id %>" class="btn btn-primary">Show</a>
          <a href="/spots_avaiables/<%= spots_avaiable.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_spots_avaiable/<%= spots_avaiable.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @spots_avaiables, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
