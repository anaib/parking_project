<div class="page-header">
  <h1>
    Private parking spots
    <a href="/private_parking_spots/new" class="btn btn-lg btn-success">New Private parking spot</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Address</th>
        <th>City</th>
        <th>Zipcode</th>
        <th>Date</th>
        <th>Starting time</th>
        <th>Duration</th>
        <th>Points</th>
        <th>Car type</th>
        <th>Description</th>
        <th>Offer user</th>
        <th>Accept user</th>
        <th>Parking price</th>
        <th>Actions</th>
      </tr>

      <% @private_parking_spots.each do |private_parking_spot| %>
      <tr>
        <td><%= private_parking_spot.address %></td>
        <td><%= private_parking_spot.city %></td>
        <td><%= private_parking_spot.zipcode %></td>
        <td><%= private_parking_spot.date %></td>
        <td><%= private_parking_spot.starting_time %></td>
        <td><%= private_parking_spot.duration %></td>
        <td><%= private_parking_spot.points %></td>
        <td><%= private_parking_spot.car_type %></td>
        <td><%= private_parking_spot.description %></td>
        <td>
          <% if private_parking_spot.offer_user.present? %>
            <a href="/users/<%= private_parking_spot.offer_user.id %>">
              <%= private_parking_spot.offer_user.created_at %>
            </a>
          <% end %>
        </td>
        <td>
          <% if private_parking_spot.accept_user.present? %>
            <a href="/users/<%= private_parking_spot.accept_user.id %>">
              <%= private_parking_spot.accept_user.created_at %>
            </a>
          <% end %>
        </td>
        <td><%= private_parking_spot.parking_price %></td>
        <td>
          <a href="/private_parking_spots/<%= private_parking_spot.id %>" class="btn btn-primary">Show</a>
          <a href="/private_parking_spots/<%= private_parking_spot.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_private_parking_spot/<%= private_parking_spot.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @private_parking_spots, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
