<div class="page-header">
  <h3>Private Parking Spot #<%= @private_parking_spot.id %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>Address</dt>
      <dd><%= @private_parking_spot.address %></dd>

      <dt>City</dt>
      <dd><%= @private_parking_spot.city %></dd>

      <dt>Zipcode</dt>
      <dd><%= @private_parking_spot.zipcode %></dd>

      <dt>Date</dt>
      <dd><%= @private_parking_spot.date %></dd>

      <dt>Starting time</dt>
      <dd><%= @private_parking_spot.starting_time %></dd>

      <dt>Duration</dt>
      <dd><%= @private_parking_spot.duration %></dd>

      <dt>Points</dt>
      <dd><%= @private_parking_spot.points %></dd>

      <dt>Car type</dt>
      <dd><%= @private_parking_spot.car_type %></dd>

      <dt>Description</dt>
      <dd><%= @private_parking_spot.description %></dd>

      <dt>Offer user</dt>
      <dd>
        <% if @private_parking_spot.offer_user.present? %>
          <a href="/users/<%= @private_parking_spot.offer_user_id %>">
            <%= @private_parking_spot.offer_user.created_at %>
          </a>
        <% end %>
      </dd>

      <dt>Accept user</dt>
      <dd>
        <% if @private_parking_spot.accept_user.present? %>
          <a href="/users/<%= @private_parking_spot.accept_user_id %>">
            <%= @private_parking_spot.accept_user.created_at %>
          </a>
        <% end %>
      </dd>

      <dt>Parking price</dt>
      <dd><%= @private_parking_spot.parking_price %></dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/private_parking_spots" class="btn btn-primary">
        Back
      </a>
      <a href="/private_parking_spots/<%= @private_parking_spot.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_private_parking_spot/<%= @private_parking_spot.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>
    </div>
  </div>
</div>
