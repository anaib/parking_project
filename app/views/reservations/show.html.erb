<div class="page-header">
  <h3>Reservation #<%= @reservation.id %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>City</dt>
      <dd><%= @reservation.city %></dd>

      <dt>Zipcode</dt>
      <dd><%= @reservation.zipcode %></dd>

      <dt>Time</dt>
      <dd><%= @reservation.time %></dd>

      <dt>Date</dt>
      <dd><%= @reservation.date %></dd>

      <dt>Offer user</dt>
      <dd>
        <% if @reservation.user.present? %>
          <a href="/users/<%= @reservation.offer_user_id %>">
            <%= @reservation.user.created_at %>
          </a>
        <% end %>
      </dd>

      <dt>Accept user</dt>
      <dd>
        <% if @reservation.accept_user.present? %>
          <a href="/users/<%= @reservation.accept_user_id %>">
            <%= @reservation.accept_user.created_at %>
          </a>
        <% end %>
      </dd>

      <dt>Points</dt>
      <dd><%= @reservation.points %></dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/reservations" class="btn btn-primary">
        Back
      </a>
      <a href="/reservations/<%= @reservation.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_reservation/<%= @reservation.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>
    </div>
  </div>
</div>
