<div class="page-header">
  <h1>
    Reservations
    <a href="/reservations/new" class="btn btn-lg btn-success">New Reservation</a>
  </h1>
</div><div class="row mb-1">
  <div class="col-md-12">
    <%= search_form_for @q, :class => "collapse", :id => "reservations_filters" do |f| %>
      <p class="lead">Narrow results:</p>

        <div class="form-group">
    <%= f.label :city_cont, "City contains" %>
    <%= f.text_field :city_cont, :class => "form-control", :placeholder => "City contains" %>
  </div>

<div class="form-group">
          <%= f.label :date, "Date" %>
          <div class="row">
            <div class='col-md-6 mb-1'>
              <div class='input-group date' id='dategteqPicker'>
                  <%= f.text_field :date_gteq, :class => "form-control", :placeholder => "Date greater than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>

            <div class='col-md-6'>
              <div class='input-group date' id='datelteqPicker'>
                  <%= f.text_field :date_lteq, :class => "form-control", :placeholder => "Date less than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>
          </div>
      </div>
      <script type="text/javascript">
          $(function () {
              $('#dategteqPicker').datetimepicker({
                  format: 'MM/DD/YYYY'
              });
              $('#datelteqPicker').datetimepicker({
                  useCurrent: false,
                  format: 'MM/DD/YYYY'
              });
              $('#dategteqPicker').on("dp.change", function (e) {
                  $('#datelteqPicker').data("DateTimePicker").minDate(e.date);
              });
              $('#datelteqPicker').on("dp.change", function (e) {
                  $('#dategteqPicker').data("DateTimePicker").maxDate(e.date);
              });
          });
      </script>

<div class="form-group">
        <%= f.label :time, "Time" %>
        <div class="row">
          <div class='col-md-6 mb-1'>
            <div class='input-group date' id='timegteqPicker'>
              <%= f.text_field :time_gteq, :class => "form-control", :placeholder => "Time greater than or equal to" %>
              <span class="input-group-addon">
                  <span class="glyphicon glyphicon-time"></span>
              </span>
              <script type="text/javascript">
                $(function () {
                    $('#timegteqPicker').datetimepicker({
                      format: 'LT'
                    });
                });
              </script>
            </div>
          </div>
          <div class='col-md-6'>
            <div class='input-group date' id='timelteqPicker'>
              <%= f.text_field :time_lteq, :class => "form-control", :placeholder => "Time less than or equal to" %>
              <span class="input-group-addon">
                  <span class="glyphicon glyphicon-time"></span>
              </span>
              <script type="text/javascript">
                $(function () {
                    $('#timelteqPicker').datetimepicker({
                      format: 'LT'
                    });
                });
              </script>
            </div>
          </div>
        </div>
      </div>

<div class="form-group">
    <%= f.label :zipcode_cont, "Zipcode contains" %>
    <%= f.text_field :zipcode_cont, :class => "form-control", :placeholder => "Zipcode contains" %>
  </div>

<div class="form-group">
          <%= f.label :created_at, "Created at" %>
          <div class="row">
            <div class='col-md-6 mb-1'>
              <div class='input-group date' id='created_atgteqPicker'>
                  <%= f.text_field :created_at_gteq, :class => "form-control", :placeholder => "Created at greater than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>

            <div class='col-md-6'>
              <div class='input-group date' id='created_atlteqPicker'>
                  <%= f.text_field :created_at_lteq, :class => "form-control", :placeholder => "Created at less than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>
          </div>
      </div>
      <script type="text/javascript">
          $(function () {
              $('#created_atgteqPicker').datetimepicker({
                  format: 'YYYY-MM-DD hh:mm:SS'
              });
              $('#created_atlteqPicker').datetimepicker({
                  useCurrent: false,
                  format: 'YYYY-MM-DD hh:mm:SS'
              });
              $('#created_atgteqPicker').on("dp.change", function (e) {
                  $('#created_atlteqPicker').data("DateTimePicker").minDate(e.date);
              });
              $('#created_atlteqPicker').on("dp.change", function (e) {
                  $('#created_atgteqPicker').data("DateTimePicker").maxDate(e.date);
              });
          });
      </script>

        <div class="form-group">
          <%= f.label :created_at, "User Created at" %>
          <div class="row">
            <div class='col-md-6 mb-1'>
              <div class='input-group date' id='usergteqcreated_atPicker'>
                  <%= f.text_field :user_created_at_gteq, :class => "form-control", :placeholder => "User Created at greater than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>

            <div class='col-md-6'>
              <div class='input-group date' id='userlteqcreated_atPicker'>
                  <%= f.text_field :user_created_at_lteq, :class => "form-control", :placeholder => "User Created at less than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>
          </div>
      </div>
      <script type="text/javascript">
          $(function () {
              $('#usergteqcreated_atPicker').datetimepicker({
                  format: 'YYYY-MM-DD hh:mm:SS'
              });
              $('#userlteqcreated_atPicker').datetimepicker({
                  useCurrent: false,
                  format: 'YYYY-MM-DD hh:mm:SS'
              });
              $('#usergteqcreated_atPicker').on("dp.change", function (e) {
                  $('#userlteqcreated_atPicker').data("DateTimePicker").minDate(e.date);
              });
              $('#userlteqcreated_atPicker').on("dp.change", function (e) {
                  $('#usergteqcreated_atPicker').data("DateTimePicker").maxDate(e.date);
              });
          });
      </script>

      <%= f.submit :class => "btn btn-primary btn-block mb-1" %>

      <a href="/reservations" class="btn btn-default btn-block mb-1">Clear filters</a>
    <% end %>
    <a class="btn btn-default btn-block mb-1" data-toggle="collapse" href="#reservations_filters">
      Show Filters
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>City</th>
        <th>Zipcode</th>
        <th>Time</th>
        <th>Date</th>
        <th>User</th>
        <th>Actions</th>
      </tr>

      <% @reservations.each do |reservation| %>
      <tr>
        <td><%= reservation.city %></td>
        <td><%= reservation.zipcode %></td>
        <td><%= reservation.time %></td>
        <td><%= reservation.date %></td>
        <td>
          <% if reservation.user.present? %>
            <a href="/users/<%= reservation.user.id %>">
              <%= reservation.user.created_at %>
            </a>
          <% end %>
        </td>
        <td>
          <a href="/reservations/<%= reservation.id %>" class="btn btn-primary">Show</a>
          <a href="/reservations/<%= reservation.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_reservation/<%= reservation.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @reservations, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
