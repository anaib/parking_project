<div class="page-header">
  <h1>
    Spots informations
    <a href="/spots_informations/new" class="btn btn-lg btn-success">New Spots information</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>City</th>
        <th>User</th>
        <th>Zipcode</th>
        <th>Actions</th>
      </tr>

      <% @spots_informations.each do |spots_information| %>
      <tr>
        <td><%= spots_information.city %></td>
        <td>
          <% if spots_information.user.present? %>
            <a href="/users/<%= spots_information.user.id %>">
              <%= spots_information.user.created_at %>
            </a>
          <% end %>
        </td>
        <td><%= spots_information.zipcode %></td>
        <td>
          <a href="/spots_informations/<%= spots_information.id %>" class="btn btn-primary">Show</a>
          <a href="/spots_informations/<%= spots_information.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_spots_information/<%= spots_information.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @spots_informations, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
