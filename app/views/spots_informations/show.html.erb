<div class="page-header">
  <h3>Spots Information #<%= @spots_information.id %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>City</dt>
      <dd><%= @spots_information.city %></dd>

      <dt>User</dt>
      <dd>
        <% if @spots_information.user.present? %>
          <a href="/users/<%= @spots_information.user_id %>">
            <%= @spots_information.user.username %>
          </a>
        <% end %>
      </dd>

      <dt>Zipcode</dt>
      <dd><%= @spots_information.zipcode %></dd>

      <dt>Streets</dt>
      <dd><%= @spots_information.streets %></dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/spots_informations" class="btn btn-primary">
        Back
      </a>
      <a href="/spots_informations/<%= @spots_information.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_spots_information/<%= @spots_information.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>
    </div>
  </div>
</div>
