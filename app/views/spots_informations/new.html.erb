<!-- Validation failure messages -->
<% if @spots_information.errors.any? %>
  <% @spots_information.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Add Spots Information</h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/create_spots_information" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for city -->
      <div class="form-group">
        <label for="city" class="control-label">
          City
        </label>

        <input type="text" id="city" name="city" placeholder="City" class="form-control" value="<%= @spots_information.city %>">
      </div>

      <!-- Label and input for user_id -->
      <input type="hidden" name="user_id" value="<%= current_user.id %>">

      <!-- Label and input for zipcode -->
      <div class="form-group">
        <label for="zipcode" class="control-label">
          Zipcode
        </label>

        <input type="text" id="zipcode" name="zipcode" placeholder="Zipcode" class="form-control" value="<%= @spots_information.zipcode %>">
      </div>


      <!-- Label and input for streets -->
      <div class="form-group">
        <label for="streets" class="control-label">
          Streets and time when parking generally avaiable in the area
        </label>

        <textarea id="streets" name="streets" placeholder="Enter the name of the street and times when parking is generally available in the mentioned location" class="form-control" rows="3"><%= @spots_information.streets %></textarea>
      </div>

      <button class="btn btn-success">
        Create Spots Information
      </button>
      or
      <a href="/spots_informations">Cancel</a>
    </form>
  </div>
</div>
